<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"/>

    <bean id="elnService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="${ELN_SERVICE_URL}/service/${ELN_SERVICE_NAME}"/>
        <property name="serviceInterface" value="${ELN_SERVICE_CLASS}"/>
        <property name="httpInvokerRequestExecutor">
            <bean class="com.chemistry.enotebook.security.BasicAuthorizationRequestExecutor">
                <property name="authorization" value="${ELN_SERVICE_AUTHORIZATION}"/>
                <property name="readTimeout" value="300000"/> <!-- 5 minutes (default value is 1 minute) -->
            </bean>
        </property>
    </bean>

</beans>